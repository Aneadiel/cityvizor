{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"noImplicitAny": false,
		"typeRoots": [
			"node_modules/@types/"
		]
	},
	"include": [
		"src/**/*",
		"build/index.ts"
	],
	"angularCompilerOptions": {
		"genDir": "./build",
		"skipMetadataEmit" : true
	}
}